<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.office.restobook.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.office.restobook.ui.home.HomeFragment"
        android:label="Running Orders"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.office.restobook.ui.order.OrderDetailsFragment"
        android:label="Order Details"
        tools:layout="@layout/fragment_order_details">
        <argument
            android:name="orderId"
            app:argType="long" />
        <argument
            android:name="autoShowAddItem"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="isReadOnly"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/menuManagementFragment"
        android:name="com.office.restobook.ui.menu.MenuManagementFragment"
        android:label="Menu Management"
        tools:layout="@layout/fragment_menu_management" />

    <fragment
        android:id="@+id/salesHistoryFragment"
        android:name="com.office.restobook.ui.history.SalesHistoryFragment"
        android:label="Sales History"
        tools:layout="@layout/fragment_sales_history">
        <action
            android:id="@+id/action_salesHistoryFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>

</navigation>
